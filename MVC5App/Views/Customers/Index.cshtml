@model IEnumerable<MVC5App.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2> @Html.ActionLink("Add New Customer","AddNew","Customers", new { @class = "btn btn-primary" })
@if (Model.Any())
{
	<table width="100%" id="customer">
		<tr>
			<th>Id</th>
			<th>Customer Name</th>
			<th>MemberShip</th>
			<th>Discount Rate</th>
			<th>Action</th>
		</tr>
		@foreach (var customer in Model) {
			<tr>
				<td>@customer.Id</td>
				<td>@Html.ActionLink(customer.Name, "Details", new { id = customer.Id }, null)</td>
				<td>@customer.MemberShipType.Name</td>
				<td>@customer.MemberShipType.DiscountRate%</td>
				<td>@Html.ActionLink("Edit","Edit",new {id=customer.Id }, null)
					<button data-customer-id="@customer.Id" class="btn-link js-delete" >Delete</button>
				</td>
			</tr>
		}
	</table>
}
@section Scripts{
	<script>
		$(document).ready(function () {

			$("#customer").DataTable();
			$("#customer").on("click",".js-delete", function () {
				var button = $(this);

				bootbox.confirm("Are you sure you want to delete the customer", function (result) {
					if (result) {
						$.ajax({
							url: "/api/Customers/" + button.attr("data-customer-id"),
							method: "DELETE",
							success: function () {
								button.parents("tr").remove();
							}
						});
					}
				});
			});
		});
	</script>
}

