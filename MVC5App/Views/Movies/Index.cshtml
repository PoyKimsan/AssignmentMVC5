@model IEnumerable<MVC5App.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<h2>@Html.ActionLink("Add New Movie","AddNew")</h2>
@if (Model.Any())
{
	<table width="100%">
		<tr>
			<th>Id</th>
			<th>Movie Title</th>
		</tr>
		@foreach (var movie in Model) {
			<tr>
				<td>@movie.Id</td>
				<td>@Html.ActionLink(@movie.Name, "Details",new {id=movie.Id}, null)</td>
				<td>@Html.ActionLink("Edit","Edit",new { id=movie.Id}, null)</td>
			</tr>
		}
	</table>
}

